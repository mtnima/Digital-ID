<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/circle_indicator_frame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_gravity="center_horizontal">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_indicator"
        android:layout_width="@dimen/nfc_instructions_progress_circle_size"
        android:layout_height="@dimen/nfc_instructions_progress_circle_size"
        android:progress="100"
        app:indicatorColor="@color/green"
        app:indicatorSize="@dimen/nfc_instructions_progress_circle_size"
        app:trackColor="#ccc" />

    <TextView
        android:id="@+id/progress_indicator_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="1" />

</FrameLayout>