<resources>
    <!-- Base application theme. -->
    <style name="Theme.Moritania_Test" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Moritania_Test.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Moritania_Test.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Moritania_Test.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="buttonShape" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="buttonShapeWhite" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>


    <style name="ShapeAppearance.CircularBorder" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="intro_page_heading_style">

        <item name="android:textSize">@dimen/intro_page_heading_text_size</item>
        <item name="android:textColor">#07A854</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

    <style name="intro_page_sub_heading_style">

        <item name="android:textSize">@dimen/intro_page_sub_heading_text_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="alpha">0.5</item>

    </style>


    <style name="intro_buttonShape" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/intro_page_continue_btn_height</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="intro_buttonShape_white" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/intro_page_continue_btn_height</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@color/green</item>
        <item name="strokeColor">@color/green</item>
        <item name="strokeWidth">2dp</item>
    </style>


    <style name="page_title_style">

        <item name="android:textSize">@dimen/page_title_text_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>


    </style>

    <style name="page_title_underline_style">

        <item name="background">@color/green</item>

    </style>


        <style name="back_btn_style" parent="ThemeOverlay.Material3.Button">
            <item name="android:layout_width">@dimen/back_next_btn_width</item>
            <item name="android:layout_height">@dimen/back_next_btn_height</item>
           <item name="cornerRadius">10dp</item>
            <item name="android:backgroundTint">@color/white</item>
            <item name="android:textSize">@dimen/back_next_btns_text_size</item>
            <item name="android:textAllCaps">false</item>
            <item name="android:textColor">@color/green</item>
            <item name="strokeColor">@color/green</item>
            <item name="strokeWidth">2dp</item>

        </style>

    <style name="next_btn_style" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_width">@dimen/back_next_btn_width</item>
        <item name="android:layout_height">@dimen/back_next_btn_height</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textSize">@dimen/back_next_btns_text_size</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:textColor">@color/white</item>


    </style>





</resources>